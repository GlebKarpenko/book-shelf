{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "baseUrl": "src",
        "paths": {
            "@app/*": ["*"]
        },
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}
